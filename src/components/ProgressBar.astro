<style>
    .progress-container {
        background: var(--gradient-card);
        border: 2px solid var(--color-border);
        border-radius: var(--radius-lg);
        padding: 2rem;
        backdrop-filter: blur(10px);
        margin-bottom: 2rem;
    }

    .progress-header {
        margin-bottom: 1.5rem;
    }

    .progress-stats {
        display: flex;
        justify-content: space-around;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .stat {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .stat-icon {
        font-size: 2rem;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-primary);
    }

    .stat-label {
        font-size: 0.875rem;
        color: var(--color-text-muted);
    }

    .progress-bar {
        width: 100%;
        height: 40px;
        background: var(--color-bg-secondary);
        border-radius: var(--radius-md);
        overflow: hidden;
        position: relative;
        box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .progress-fill {
        height: 100%;
        background: var(--gradient-primary);
        transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 1rem;
        position: relative;
        box-shadow: var(--shadow-md);
    }

    .progress-fill::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            90deg,
            transparent 0%,
            rgba(255, 255, 255, 0.2) 50%,
            transparent 100%
        );
        animation: shimmer 2s infinite;
    }

    @keyframes shimmer {
        0% {
            transform: translateX(-100%);
        }
        100% {
            transform: translateX(100%);
        }
    }

    .progress-text {
        font-weight: 700;
        color: white;
        font-size: 1.125rem;
        position: relative;
        z-index: 1;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    @media (max-width: 640px) {
        .progress-stats {
            gap: 1rem;
        }

        .stat-icon {
            font-size: 1.5rem;
        }

        .stat-value {
            font-size: 1.25rem;
        }
    }
</style>
