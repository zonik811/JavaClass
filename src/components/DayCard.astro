---
interface Props {
  day: number;
  title: string;
  status: 'locked' | 'available' | 'in-progress' | 'completed';
  miniProject?: boolean;
}

const { day, title, status, miniProject = false } = Astro.props;

const statusConfig = {
  locked: {
    icon: 'üîí',
    label: 'Bloqueado',
    class: 'status-locked',
  },
  available: {
    icon: 'üìñ',
    label: 'Disponible',
    class: 'status-available',
  },
  'in-progress': {
    icon: '‚è≥',
    label: 'En progreso',
    class: 'status-progress',
  },
  completed: {
    icon: '‚úÖ',
    label: 'Completado',
    class: 'status-completed',
  },
};

const config = statusConfig[status];
const isClickable = status !== 'locked';
---

<a 
  href={isClickable ? `/dia/${day}` : '#'} 
  class={`day-card ${config.class} ${!isClickable ? 'disabled' : ''}`}
  aria-disabled={!isClickable}
>
  <div class="day-number">D√≠a {day}</div>
  <div class="day-content">
    <h3>{title}</h3>
    {miniProject && <span class="mini-project-badge">üéØ Mini-Proyecto</span>}
    <div class="status-badge">
      <span class="status-icon">{config.icon}</span>
      <span class="status-label">{config.label}</span>
    </div>
  </div>
</a>

<style>
  .day-card {
    display: flex;
    gap: 1.5rem;
    background: var(--gradient-card);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    backdrop-filter: blur(10px);
    transition: var(--transition);
    cursor: pointer;
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .day-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--gradient-primary);
    opacity: 0;
    transition: var(--transition);
  }

  .day-card:hover::before {
    opacity: 1;
  }

  .day-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    transform: translateX(8px);
  }

  .day-card.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  .day-number {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-primary);
    border-radius: var(--radius-md);
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    box-shadow: var(--shadow-md);
  }

  .day-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .day-content h3 {
    font-size: 1.25rem;
    color: var(--color-text);
    margin: 0;
  }

  .mini-project-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-accent);
    color: white;
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    font-weight: 600;
    width: fit-content;
  }

  .status-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .status-icon {
    font-size: 1.25rem;
  }

  .status-completed .status-badge {
    color: var(--color-success);
  }

  .status-progress .status-badge {
    color: var(--color-warning);
  }

  .status-available .status-badge {
    color: var(--color-primary);
  }

  @media (max-width: 640px) {
    .day-card {
      flex-direction: column;
      gap: 1rem;
    }

    .day-number {
      width: 100%;
      height: 60px;
    }
  }
</style>
