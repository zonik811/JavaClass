---
interface Props {
    id: number;
    title: string;
    difficulty?: "easy" | "medium" | "hard";
}

const { id, title, difficulty = "easy" } = Astro.props;

const difficultyConfig = {
    easy: { icon: "üü¢", label: "F√°cil", color: "#06ffa5" },
    medium: { icon: "üü°", label: "Medio", color: "#ffbe0b" },
    hard: { icon: "üî¥", label: "Dif√≠cil", color: "#ff006e" },
};

const config = difficultyConfig[difficulty];
---

<div class="exercise-block" data-exercise-id={id}>
    <div class="exercise-header">
        <h4>
            <span class="exercise-number">Ejercicio {id}</span>
            <span class="exercise-title">{title}</span>
        </h4>
        <span class="difficulty-badge" style={`color: ${config.color}`}>
            {config.icon}
            {config.label}
        </span>
    </div>

    <div class="exercise-content">
        <slot />
    </div>

    <div class="exercise-hints">
        <details class="hint-details">
            <summary class="hint-summary">üí° Pista 1</summary>
            <div class="hint-content">
                <slot name="hint1" />
            </div>
        </details>

        <details class="hint-details">
            <summary class="hint-summary">üí° Pista 2</summary>
            <div class="hint-content">
                <slot name="hint2" />
            </div>
        </details>
    </div>

    <details class="solution-details">
        <summary class="solution-summary">‚úÖ Ver Soluci√≥n</summary>
        <div class="solution-content">
            <slot name="solution" />
        </div>
    </details>

    <button class="btn-mark-complete" data-exercise-id={id}>
        <span class="check-icon">‚òê</span>
        <span class="check-text">Marcar como completado</span>
    </button>
</div>

<style>
    .exercise-block {
        background: var(--color-bg-card);
        border: 2px solid var(--color-border);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        margin: 1.5rem 0;
        transition: var(--transition);
    }

    .exercise-block:hover {
        border-color: var(--color-primary);
        box-shadow: var(--shadow-md);
    }

    .exercise-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .exercise-header h4 {
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .exercise-number {
        font-size: 0.875rem;
        color: var(--color-primary);
        font-weight: 600;
    }

    .exercise-title {
        font-size: 1.125rem;
        color: var(--color-text);
    }

    .difficulty-badge {
        padding: 0.25rem 0.75rem;
        background: var(--color-bg-secondary);
        border-radius: var(--radius-sm);
        font-size: 0.875rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .exercise-content {
        margin-bottom: 1.5rem;
        color: var(--color-text-muted);
        line-height: 1.8;
    }

    .exercise-hints {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .hint-details,
    .solution-details {
        background: var(--color-bg-secondary);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        overflow: hidden;
    }

    .hint-summary,
    .solution-summary {
        padding: 0.75rem 1rem;
        cursor: pointer;
        user-select: none;
        font-weight: 600;
        color: var(--color-primary);
        transition: var(--transition);
        list-style: none;
    }

    .hint-summary::-webkit-details-marker,
    .solution-summary::-webkit-details-marker {
        display: none;
    }

    .hint-summary:hover,
    .solution-summary:hover {
        background: var(--color-bg-card);
    }

    .solution-summary {
        color: var(--color-success);
    }

    .hint-content,
    .solution-content {
        padding: 1rem;
        border-top: 1px solid var(--color-border);
        animation: fadeIn 0.3s ease-out;
    }

    .btn-mark-complete {
        width: 100%;
        margin-top: 1rem;
        padding: 0.75rem;
        background: var(--color-bg-secondary);
        border: 2px solid var(--color-border);
        border-radius: var(--radius-md);
        color: var(--color-text);
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-mark-complete:hover {
        border-color: var(--color-success);
        background: var(--color-success);
        color: var(--color-bg);
    }

    .btn-mark-complete.completed {
        border-color: var(--color-success);
        background: var(--color-success);
        color: var(--color-bg);
    }

    .btn-mark-complete.completed .check-icon {
        content: "‚òë";
    }

    .check-icon {
        font-size: 1.25rem;
    }

    @media (max-width: 640px) {
        .exercise-header {
            flex-direction: column;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const buttons = document.querySelectorAll(".btn-mark-complete");

        buttons.forEach((button) => {
            button.addEventListener("click", () => {
                button.classList.toggle("completed");
                const icon = button.querySelector(".check-icon");
                const text = button.querySelector(".check-text");

                if (button.classList.contains("completed")) {
                    if (icon) icon.textContent = "‚òë";
                    if (text) text.textContent = "Completado";
                } else {
                    if (icon) icon.textContent = "‚òê";
                    if (text) text.textContent = "Marcar como completado";
                }
            });
        });
    });
</script>
